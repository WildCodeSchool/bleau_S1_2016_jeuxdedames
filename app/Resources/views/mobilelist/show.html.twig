{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mobilelist</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mobileList.id }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if mobileList.dateDebut %}{{ mobileList.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if mobileList.dateFin %}{{ mobileList.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mobilelist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mobilelist_edit', { 'id': mobileList.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
