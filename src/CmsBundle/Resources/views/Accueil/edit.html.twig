{% extends 'base.html.twig' %}

{% block body %}
    {{ tinymce_init({'theme': {'simple': {'menubar': false}}}) }}
    <h1>Administration de la page d'accueil </h1>
    {{ form_start(edit_form) }}

    <div class="container">
        <div class="row">
            <p class="">Titre au dessus du slide</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(edit_form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}}) }}
                {{ form_errors(edit_form.titre) }}
            </div>
        </div>
        <div class="row">
            <p class="">Premier Titre</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(edit_form.premiertitre, {'attr': {'class': 'form-control', 'placeholder': 'Premier titre'}}) }}
                {{ form_errors(edit_form.premiertitre) }}
            </div>
        </div>
        <div class="row">
            <p class="">Premier Contenu</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(edit_form.premiercontenu, {'attr': {'class': 'form-control', 'placeholder': 'Premier Contenu'}}) }}
                {{ form_errors(edit_form.premiercontenu) }}
            </div>
        </div>
        <div class="row">
            <p class="">Deuxieme Titre</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(edit_form.deuxiemetitre, {'attr': {'class': 'form-control', 'placeholder': 'Deuxième titre'}}) }}
                {{ form_errors(edit_form.deuxiemetitre) }}
            </div>
        </div>
        <div class="row">
            <p class="">Deuxieme Contenu</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(edit_form.deuxiemecontenu, {'attr': {'class': 'form-control', 'placeholder': 'Deuxième contenu'}}) }}
                {{ form_errors(edit_form.deuxiemecontenu) }}
            </div>
        </div>
        <div class="row">
            <p class="">Troisième Titre</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(edit_form.troisiemetitre, {'attr': {'class': 'form-control', 'placeholder': 'Troisème titre'}}) }}
                {{ form_errors(edit_form.troisiemetitre) }}
            </div>
        </div>
        <div class="row">
            <p class="">Troisieme Contenu</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(edit_form.troisiemecontenu, {'attr': {'class': 'form-control', 'placeholder': 'Troisième contenu'}}) }}
                {{ form_errors(edit_form.troisiemecontenu) }}
            </div>
        </div>
        <div class="row">
            <p>Contenu en face de l'image</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(edit_form.contenu) }}
                {{ form_errors(edit_form.contenu) }}
            </div>
        </div>
        <div class="row">
            <p>Image bas gauche</p>
            <div class="input-group">
                {{ form_widget(edit_form.file, {'attr': {'class': 'help-block'}}) }}
                {{ form_errors(edit_form.file) }}
            </div>
        </div>
        <div class="row">
            <p>Image au milieu de la page</p>
            <div class="input-group">
                {{ form_widget(edit_form.image2.file, {'attr': {'class': 'help-block'}}) }}
                {{ form_errors(edit_form.image2.file) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="edit_admin">
            <input class="btn btn-default edit_admin"  type="submit" value="Modifier" />
        </div>
    </div>

    {{ form_end(edit_form) }}

{% endblock %}
