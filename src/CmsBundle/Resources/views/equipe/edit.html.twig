{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modifier un membre</h1>

    <div class="container-fluid">
        {{ form_start(edit_form) }}
        <div class="container">
            <div class="row">
                <p class="">Nom du membre</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du membre'}}) }}
                    {{ form_errors(edit_form.nom) }}
                </div>
            </div>
            <div class="row">
                <p class="">Prenom du membre</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(edit_form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prenom du membre'}}) }}
                    {{ form_errors(edit_form.prenom) }}
                </div>
            </div>
            <div class="row">
                <p class="">Status du membre</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(edit_form.role, {'attr': {'class': 'form-control', 'placeholder': 'Status du membre'}}) }}
                    {{ form_errors(edit_form.role) }}
                </div>
            </div>
            <div class="row">
                <p class="">Telephone du membre</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(edit_form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Telephone du membre'}}) }}
                    {{ form_errors(edit_form.telephone) }}
                </div>
            </div>
            <div class="row">
                <div class="input-group">
                    {{ form_widget(edit_form.images, {'attr': {'class': 'help-block'}}) }}
                    {{ form_errors(edit_form.images) }}
                </div>
            </div>
            <div class="row">
                <div class="checkbox">
                    <label>
                        {{ form_widget(edit_form.showTel) }} Afficher le numéro de téléphone
                    </label>
                    {{ form_errors(edit_form.showTel) }}
                </div>
            </div>
            <div class="row">
                {#{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}#}
                <div class="edit_admin">
                    <input class="btn btn-default edit_admin"  type="submit" value="Modifier" />
                </div>
                {#{% endif %}#}
            </div>
        </div>
        {{ form_end(edit_form) }}

    </div>
{% endblock %}
