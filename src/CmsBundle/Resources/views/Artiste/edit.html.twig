{% extends 'base.html.twig' %}

{% block body %}
    <h1>Editer un artiste: {{ artiste.nom }}</h1>
    {{ form_start(edit_form) }}

    <div class="container-fluid">

        <div class="container">
            <div class="row">
                <p class="">Nom</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    {{ form_errors(edit_form.nom) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Photo de l'oeuvre</p>
                <div class="input-group">
                    {{ form_widget(edit_form.file, {'attr': {'class': 'help-block'}}) }}
                    {{ form_errors(edit_form.file) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Cat√©gorie</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(edit_form.categorie, {'attr': {'class': 'form-control', 'placeholder': 'Lien'}}) }}
                    {{ form_errors(edit_form.categorie) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Lien vers l'artiste</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(edit_form.lien, {'attr': {'class': 'form-control', 'placeholder': 'Lien'}}) }}
                    {{ form_errors(edit_form.lien) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="checkbox">
                    <label>
                        {{ form_widget(edit_form.ajouterslider) }} Ajouter au slider
                    </label>
                    {{ form_errors(edit_form.ajouterslider) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="checkbox">
                    <label>
                        {{ form_widget(edit_form.archive) }} Ajouter aux archives
                    </label>
                    {{ form_errors(edit_form.archive) }}
                </div>
            </div>
        </div>

    <div class="row">
        <div class="edit_admin">
            <input class="btn btn-default edit_admin"  type="submit" value="Modifier" />
        </div>
    </div>

    {{ form_end(edit_form) }}

{% endblock %}