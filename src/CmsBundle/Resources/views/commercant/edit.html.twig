{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modification d'un commerçant: {{ commercant.nom }}</h1>

    <div class="container-fluid">
        {{ form_start(form) }}

        <div class="container">
            <div class="row">
                <p class="">Nom du commerçant</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du commerçant'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Adresse</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                    {{ form_errors(form.adresse) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Code Postal</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(form.code, {'attr': {'class': 'form-control', 'placeholder': 'Code postal'}}) }}
                    {{ form_errors(form.code) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Ville</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                    {{ form_errors(form.ville) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Lien vers le site</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(form.lien, {'attr': {'class': 'form-control', 'placeholder': 'Lien'}}) }}
                    {{ form_errors(form.lien) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Photo de l'emplacement</p>
                <div class="input-group ">
                    {{ form_widget(form.file, {'attr': {'class':'help-block'}}) }}
                    {{ form_errors(form.file) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="edit_admin">
                <input class="btn btn-default edit_admin"  type="submit" value="Modifier" />
            </div>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}
