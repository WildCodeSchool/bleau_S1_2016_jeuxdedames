{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des artistes</h1>
    <div class="container">
        <div class="row">
            <div class="edit_admin">
                <a class="btn btn-default edit_admin" href="{{ path('partenaire_new') }}">Ajouter un nouveau partenaire</a>
                <a class="btn btn-default edit_admin" href="{{ path('user_partenaire') }}">Retour Ã  la page partenaire</a>
            </div>
        </div>
        <div class="row">
            <table id="example" class="display" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Photos</th>
                    <th>Donation</th>
                    <th>Adresse</th>
                    <th>Lien</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for partenaire in partenaires %}
                    <tr>
                        <td><img style="width: 160px !important;" src="{{ asset('uploads/imgcms/') }}{{ partenaire.image }}" alt="{{ partenaire.image }}"></td>
                        <td>{{ partenaire.donation }}</td>
                        <td>{{ partenaire.adresse }}</td>
                        <td><a href="{{ partenaire.lien }}">WebSite</a></td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('partenaire_edit', { 'id': partenaire.id }) }}">Editer</a>
                                </li>
                                <li>
                                    <a href="{{ path('partenaire_delete', { 'id': partenaire.id }) }}">Supprimer</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#example').DataTable( {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/French.json"
                }
            })
        });
    </script>
    <script type="text/javascript" src=" https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">

{% endblock %}