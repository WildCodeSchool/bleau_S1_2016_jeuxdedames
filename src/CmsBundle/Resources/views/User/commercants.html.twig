{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted("ROLE_SUPER_ADMIN") %}
        {%  if wrong_commercant[0] is defined %}
            <div class="container">
                <div class="row">
                    <div class="wrong_commercant">
                        <h3>L'adresse des commerçants suivant est mal renseignée, veuillez la corriger</h3>
                        <table>
