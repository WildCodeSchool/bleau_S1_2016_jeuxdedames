{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .row_video{
            text-align: center;
        }
        .row_video h5{
            height:70px;
        }
        iframe{
            width:300px !important;
            height: 200px !important;
        }
        .panel-title{
            text-align: center;
            font-family: inherit !important;
            color: white !important;
        }
        .panel-default>.panel-heading{
            background-image: -webkit-linear-gradient(top,#288493 0,#00BCD4 100%);
            background-image: -o-linear-gradient(top,#288493 0,#00BCD4 100%);
            background-image: -webkit-gradient(linear,left top,left bottom,from(#288493),to(#00BCD4));
            background-image: linear-gradient(to bottom,#288493 0,#00BCD4 100%);
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#fff5f5f5', endColorstr='#ffe8e8e8', GradientType=0);
            background-repeat: repeat-x;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="row">
        {% if is_granted("ROLE_SUPER_ADMIN") %}
            <div class="edit_admin">
                <a class="btn btn-default edit_admin" href="{{ path('admin_youtube_new') }}">Ajouter une nouvelle video</a>
                <a class="btn btn-default edit_admin" href="{{ path('admin_youtube_index') }}">Administrer les video</a>
            </div>
        {% endif %}
    </div>
    <div class="container-fluid">
        <div class="ariche_block">
            {% if artistes != null %}
                <div class="title_section">
                    <h2>Archives</h2>
                </div>
                <h6 style="text-align: center;">Cliquez sur une cat√©gorie pour visualiser les artistes correspondant</h6>

                <div class="panel-group row" id="accordion" role="tablist">
                    {% for categ in categories %}
                        <div class="panel-default">
                            <div class="panel-heading" role="tab" id="headingOne">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{ categ.id }}" aria-expanded="true" aria-controls="collapseOne">
                                        {{ categ.nomDeLaCategorie }}
                                    </a>
                                </h4>
                            </div>
                            <div id="{{ categ.id }}" class="panel-collapse collapse in, row" role="tabpanel" aria-labelledby="headingOne">
                                <div class="panel-body">
                                    {% for artiste in categ.artiste %}
                                        {% if artiste.archive == true %}
                                            <div class="col-md-3 col-sm-4 col-xs-6 artistepage">
                                                <figure class="snip1239">
                                                    <img src="{{ asset('uploads/imgcms/') }}{{ artiste.image }}"/>
                                                    <figcaption>
                                                        <h3 class="editartiste2">{{ artiste.nom }}</h3>
                                                        <p class="editartiste2">{{ artiste.categorie }}</p>
                                                        {% if (artiste.lien != null) %}
                                                            <a href="{{ artiste.lien | external_link }}" target="_blank" class="read-more">En savoir plus</a>
                                                        {% endif %}
                                                    </figcaption>
                                                </figure>
                                                {% if is_granted("ROLE_SUPER_ADMIN") %}
                                                    <div class="row">
                                                        <div class="edit_admin">
                                                            <a class="btn btn-default edit_admin" href="{{ path('artiste_edit', { 'id': artiste.id }) }}">Editer</a>
                                                            <a class="btn btn-default edit_admin confirmModalLink" href="{{ path('artiste_delete', {'id':  artiste.Id  }) }}" title="Supprimer">Supprimer</a>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="title_section">
                    <h1>Il n'y a pas d'artiste dans les archives</h1>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="container-fluid">
        <h2>Archives Video</h2>
        <div class="row">
            {% for video in videos %}
                <div class="col-md-3 row_video">
                    <h5>{{ video.title }}</h5>
                    {{ video.link|raw }}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}