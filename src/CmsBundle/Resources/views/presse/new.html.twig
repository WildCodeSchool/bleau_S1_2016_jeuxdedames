{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ajout d'une press</h1>
    {{ form_start(form) }}

    <div class="container">
        <div class="row">
            <p class="">Nom</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                {{ form_errors(form.nom) }}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <p class="">photo article</p>
            <div class="input-group">
                {{ form_widget(form.file, {'attr': {'class': 'help-block'}}) }}
                {{ form_errors(form.file) }}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <p class="">Description</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(form.texte, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                {{ form_errors(form.texte) }}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <p class="">Lien vers l'artiste</p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                {{ form_widget(form.lien, {'attr': {'class': 'form-control', 'placeholder': 'Lien'}}) }}
                {{ form_errors(form.lien) }}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <p class="">date</p>
            <div class="input-group">
                {{ form_widget(form.date) }}
                {{ form_errors(form.date) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="edit_admin">
            <input class="btn btn-default edit_admin"  type="submit" value="Create" />
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}